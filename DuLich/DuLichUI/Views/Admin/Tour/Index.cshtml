@using ViewModel.Models;
@model List<Tour>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Danh sách tour";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Tour du lịch</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách tour</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered display nowrap" id="dataTable" cellspacing="0" >
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Ảnh</th>
                        <th>Tên tour</th>
                        <th>Lịch trình ngày</th>
                        <th>Chi tiết lịch trình</th>
                        <th>Địa điểm</th>
                        <th>Chủ tour</th>
                        <th>Số ngày</th>
                        <th>Lượt đánh giá</th>
                        <th>Chi tiết</th>
                        <th>Mô tả</th>
                        <th>Giá</th>
                        <th>Khuyến mãi</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var tour in Model)
                    {
                        var temp = tour.TrangThai;
                        var text = temp ? "Ẩn" : "Hiện";
                        var cls = temp ? "btn btn-danger" : "btn btn-success";
                        <tr>
                            <td>@tour.Id</td>
                            <td><img src="@tour.HinhAnhTour" alt="Avatar" width="100" height="100" /></td>
                            <td>@tour.TenTour</td>
                            <td>@tour.TourCT.LichTrinhNgay</td>
                            <td>@tour.TourCT.ChiTietLichTrinh</td>
                            <td>@tour.TourCT.DiaDiem</td>
                            <td>@tour.NguoiDung.HoTen</td>
                            <td>@tour.SoNgay</td>
                            <td>@tour.LuotDanhGia</td>
                            <td>@tour.ChiTietTour</td>
                            <td>@tour.MoTaTour</td>
                            <td>@tour.GiaTour</td>
                            <td>@tour.KhuyenMaiTour</td>
                            <td>@tour.NgayBatDau.ToString()</td>
                            <td>@tour.NgayKetThuc.ToString()</td>
                            <td>
                                <a href="/admin/tour/toggle/@tour.Id" class="btn @cls">@text</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
